    if (!userId) {
      return NextResponse.json({ error: 'Unauthorized' }, { status: 401 })
    }

    if (authError || !user) {
      console.error('[Admin Profile DELETE] Auth error:', authError)
      return NextResponse.json({ error: 'Unauthorized' }, { status: 401 })
    }

    // Проверяем роль админа
    const { data: userData, error: userRoleError } = await supabase
      .from('users')
      .select('role')
      .eq('id', userId)
      .single()

    if (userRoleError || userData?.role !== 'admin') {
      console.error('[Admin Profile DELETE] Access denied for role:', userData?.role)
      return NextResponse.json({ error: 'Access denied' }, { status: 403 })
    }

    // Удаляем профиль
    const { error } = await supabase
      .from('profiles')
      .delete()
      .eq('id', id)

    if (error) {
      console.error('[Admin Profile DELETE] Error deleting profile:', error)
