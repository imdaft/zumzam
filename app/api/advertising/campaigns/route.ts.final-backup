import { NextRequest, NextResponse } from 'next/server'
import prisma from '@/lib/prisma'
import { verifyToken } from '@/lib/auth/jwt'

/**
 * GET /api/advertising/campaigns
 * –ü–æ–ª—É—á–µ–Ω–∏–µ —Å–ø–∏—Å–∫–∞ —Ä–µ–∫–ª–∞–º–Ω—ã—Ö –∫–∞–º–ø–∞–Ω–∏–π –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
 */
export async function GET(request: NextRequest) {
  try {
    // Supabase client removed

    // –ü—Ä–æ–≤–µ—Ä—è–µ–º –∞–≤—Ç–æ—Ä–∏–∑–∞—Ü–∏—é
    const token = request.cookies.get('auth-token')?.value
    if (!token) {
      return NextResponse.json({ error: 'Unauthorized' }, { status: 401 })
    }

    const payload = await verifyToken(token)
    if (!payload) {
      return NextResponse.json({ error: 'Invalid token' }, { status: 401 })
    }

    const userId = payload.sub

    // Auth check done above,
        { status: 401 }
      )
    }

    // –ü–æ–ª—É—á–∞–µ–º –∫–∞–º–ø–∞–Ω–∏–∏ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
    const { data: campaigns, error } = await supabase
      .from('ad_campaigns')
      .select(`
        *,
        profile:profiles(id, display_name, slug),
        bookings:ad_bookings(
          id,
          start_date,
          end_date,
          status,
          total_cost,
          ad_slot:ad_slots(id, name, slug)
        )
      `)
      .eq('user_id', userId)
      .order('created_at', { ascending: false })

    if (error) {
      console.error('[Advertising API] Error fetching campaigns:', error)
      return NextResponse.json(
        { error: '–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –∫–∞–º–ø–∞–Ω–∏–π', details: error.message },
        { status: 500 }
      )
    }

    return NextResponse.json({ campaigns })
  } catch (error) {
    console.error('[Advertising API] Unexpected error:', error)
    return NextResponse.json(
      { error: '–í–Ω—É—Ç—Ä–µ–Ω–Ω—è—è –æ—à–∏–±–∫–∞ —Å–µ—Ä–≤–µ—Ä–∞' },
      { status: 500 }
    )
  }
}

/**
 * POST /api/advertising/campaigns
 * –°–æ–∑–¥–∞–Ω–∏–µ –Ω–æ–≤–æ–π —Ä–µ–∫–ª–∞–º–Ω–æ–π –∫–∞–º–ø–∞–Ω–∏–∏
 */
export async function POST(request: NextRequest) {
  try {
    console.log('[Advertising API] üöÄ POST request received')
    // Supabase client removed

    // –ü—Ä–æ–≤–µ—Ä—è–µ–º –∞–≤—Ç–æ—Ä–∏–∑–∞—Ü–∏—é
    const token = request.cookies.get('auth-token')?.value
    if (!token) {
      return NextResponse.json({ error: 'Unauthorized' }, { status: 401 })
    }

    const payload = await verifyToken(token)
    if (!payload) {
      return NextResponse.json({ error: 'Invalid token' }, { status: 401 })
    }

    const userId = payload.sub

    // Auth check done above,
        { status: 401 }
      )
    }

    console.log('[Advertising API] ‚úÖ User authenticated:', userId)

    const body = await request.json()
    console.log('[Advertising API] üì¶ Request body:', {
      ...body,
      image_url: body.image_url?.substring(0, 50) + '...'
    })

    const {
      profile_id,
      title,
      description,
      image_url,
      link_url,
      start_date,
      end_date,
      targeting = {},
      bid_type = 'fixed',
      bid_amount,
      total_budget
    } = body

    // –í–∞–ª–∏–¥–∞—Ü–∏—è
    if (!title || !link_url || !start_date || !end_date) {
      console.log('[Advertising API] ‚ùå Validation failed')
      return NextResponse.json(
        { error: '–ù–µ –≤—Å–µ –æ–±—è–∑–∞—Ç–µ–ª—å–Ω—ã–µ –ø–æ–ª—è –∑–∞–ø–æ–ª–Ω–µ–Ω—ã' },
        { status: 400 }
      )
    }

    console.log('[Advertising API] üíæ Inserting campaign into DB...')

    // –°–æ–∑–¥–∞–µ–º –∫–∞–º–ø–∞–Ω–∏—é
    const { data: campaign, error } = await supabase
      .from('ad_campaigns')
      .insert({
        user_id: userId,
        profile_id,
        title,
        description,
        image_url,
        link_url,
        start_date,
        end_date,
        targeting,
        bid_type,
        bid_amount,
        total_budget,
        status: 'draft',
        moderation_status: 'pending'
      })
      .select()
      .single()

    if (error) {
      console.error('[Advertising API] ‚ùå DB Error creating campaign:', error)
      return NextResponse.json(
        { error: '–û—à–∏–±–∫–∞ —Å–æ–∑–¥–∞–Ω–∏—è –∫–∞–º–ø–∞–Ω–∏–∏', details: error.message },
        { status: 500 }
      )
    }

    console.log('[Advertising API] ‚úÖ Campaign created successfully:', campaign.id)
    return NextResponse.json({ campaign }, { status: 201 })
  } catch (error: any) {
    console.error('[Advertising API] ‚ùå Unexpected error:', error)
    return NextResponse.json(
      { error: '–í–Ω—É—Ç—Ä–µ–Ω–Ω—è—è –æ—à–∏–±–∫–∞ —Å–µ—Ä–≤–µ—Ä–∞', details: error?.message },
      { status: 500 }
    )
  }
}

