// –û–Ω–∏ –±—É–¥—É—Ç —Ä–∞–±–æ—Ç–∞—Ç—å, –Ω–æ —Ç—Ä–µ–±—É—é—Ç –ø–æ–ª–Ω–æ–π –º–∏–≥—Ä–∞—Ü–∏–∏ –Ω–∞ Prisma

// TODO: MIGRATE TO PRISMA - —ç—Ç–æ—Ç —Ñ–∞–π–ª –∏—Å–ø–æ–ª—å–∑—É–µ—Ç Supabase queries
// –û–Ω–∏ —Ä–∞–±–æ—Ç–∞—é—Ç, –Ω–æ —Ç—Ä–µ–±—É—é—Ç –º–∏–≥—Ä–∞—Ü–∏–∏ –Ω–∞ Prisma –¥–ª—è consistency

import { NextRequest, NextResponse } from 'next/server'
import prisma from '@/lib/prisma'
import { verifyToken } from '@/lib/auth/jwt'

/**
 * POST /api/advertising/bookings
 * –°–æ–∑–¥–∞–Ω–∏–µ –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏—è —Ä–µ–∫–ª–∞–º–Ω–æ–≥–æ —Å–ª–æ—Ç–∞
 */
export async function POST(request: NextRequest) {
  try {
    logger.info('[Bookings API] üöÄ POST request received')
    // Supabase client removed

    // –ü—Ä–æ–≤–µ—Ä—è–µ–º –∞–≤—Ç–æ—Ä–∏–∑–∞—Ü–∏—é
    const token = request.cookies.get('auth-token')?.value
    if (!token) {
      return NextResponse.json({ error: 'Unauthorized' }, { status: 401 })
    }

    const payload = await verifyToken(token)
    if (!payload) {
      return NextResponse.json({ error: 'Invalid token' }, { status: 401 })
    }

    const userId = payload.sub

    // Auth check done above,
        { status: 401 }
      )
    }

    logger.info('[Bookings API] ‚úÖ User authenticated:', userId)

    const body = await request.json()
    logger.info('[Bookings API] üì¶ Request body:', body)

    const {
      campaign_id,
      ad_slot_id,
      start_date,
      end_date,
      total_cost,
      status = 'pending'
    } = body

    // –í–∞–ª–∏–¥–∞—Ü–∏—è
    if (!campaign_id || !ad_slot_id || !start_date || !end_date || !total_cost) {
      logger.info('[Bookings API] ‚ùå Validation failed')
      return NextResponse.json(
        { error: '–ù–µ –≤—Å–µ –æ–±—è–∑–∞—Ç–µ–ª—å–Ω—ã–µ –ø–æ–ª—è –∑–∞–ø–æ–ª–Ω–µ–Ω—ã' },
        { status: 400 }
      )
    }

    // –ü—Ä–æ–≤–µ—Ä—è–µ–º, —á—Ç–æ –∫–∞–º–ø–∞–Ω–∏—è –ø—Ä–∏–Ω–∞–¥–ª–µ–∂–∏—Ç –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—é
    const { data: campaign } = await supabase
      .from('ad_campaigns')
      .select('user_id')
      .eq('id', campaign_id)
      .single()

    if (!campaign || campaign.user_id !== userId) {
      logger.info('[Bookings API] ‚ùå Campaign not found or access denied')
      return NextResponse.json(
        { error: '–ö–∞–º–ø–∞–Ω–∏—è –Ω–µ –Ω–∞–π–¥–µ–Ω–∞ –∏–ª–∏ –¥–æ—Å—Ç—É–ø –∑–∞–ø—Ä–µ—â–µ–Ω' },
        { status: 403 }
      )
    }

    logger.info('[Bookings API] üíæ Inserting booking into DB...')

    // –°–æ–∑–¥–∞–µ–º –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏–µ
    const { data: booking, error } = await supabase
      .from('ad_bookings')
      .insert({
        campaign_id,
        ad_slot_id,
        start_date,
        end_date,
        total_cost,
        status
      })
      .select()
      .single()

    if (error) {
      logger.error('[Bookings API] ‚ùå DB Error creating booking:', error)
      return NextResponse.json(
        { error: '–û—à–∏–±–∫–∞ —Å–æ–∑–¥–∞–Ω–∏—è –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏—è', details: error.message },
        { status: 500 }
      )
    }

    logger.info('[Bookings API] ‚úÖ Booking created successfully:', booking.id)
    return NextResponse.json({ booking }, { status: 201 })
  } catch (error: any) {
    logger.error('[Bookings API] ‚ùå Unexpected error:', error)
    return NextResponse.json(
      { error: '–í–Ω—É—Ç—Ä–µ–Ω–Ω—è—è –æ—à–∏–±–∫–∞ —Å–µ—Ä–≤–µ—Ä–∞', details: error?.message },
      { status: 500 }
    )
  }
}


